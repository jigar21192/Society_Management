<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingActivity"
    android:orientation="vertical"
    android:layout_marginTop="5dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:id="@+id/garden"
                    android:layout_width="match_parent"
                    android:layout_height="245dp"
                    android:foreground="@drawable/garden"/>
                <TextView
                    android:id="@+id/txt1"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:layout_below="@+id/garden"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Garden"/>
                <LinearLayout
                    android:id="@+id/ll1"
                    android:gravity="center"
                    android:layout_below="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/bgarden"
                        android:background="@drawable/btn_shape"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Book Now"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_below="@id/ll1"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>
            </RelativeLayout>
            <RelativeLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:id="@+id/BanquetHall"
                    android:layout_width="match_parent"
                    android:layout_height="245dp"
                    android:foreground="@drawable/banquethall"/>
                <TextView
                    android:id="@+id/txt2"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:layout_below="@+id/BanquetHall"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Banquet Hall"/>
                <LinearLayout
                    android:id="@+id/ll2"
                    android:gravity="center"
                    android:layout_below="@+id/txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/bbenquete"
                        android:background="@drawable/btn_shape"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Book Now"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_below="@id/ll2"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>
            </RelativeLayout>
            <RelativeLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:id="@+id/Theatre"
                    android:layout_width="match_parent"
                    android:layout_height="245dp"
                    android:foreground="@drawable/thre"/>
                <TextView
                    android:id="@+id/txt3"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:layout_below="@+id/Theatre"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Theatre"/>
                <LinearLayout
                    android:id="@+id/ll3"
                    android:gravity="center"
                    android:layout_below="@+id/txt3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btheater"
                        android:background="@drawable/btn_shape"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Book Now"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_below="@id/ll3"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>
            </RelativeLayout>
            <RelativeLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:id="@+id/SwimmingPool"
                    android:layout_width="match_parent"
                    android:layout_height="245dp"
                    android:foreground="@drawable/sp"/>
                <TextView
                    android:id="@+id/txt4"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:layout_below="@+id/SwimmingPool"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Swimming Pool"/>
                <LinearLayout
                    android:id="@+id/ll4"
                    android:gravity="center"
                    android:layout_below="@+id/txt4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/bswimmingpool"
                        android:background="@drawable/btn_shape"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Book Now"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_below="@id/ll4"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>
            </RelativeLayout>
            <RelativeLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:id="@+id/Restaurent"
                    android:layout_width="match_parent"
                    android:layout_height="245dp"
                    android:foreground="@drawable/restaurent"/>
                <TextView
                    android:id="@+id/txt5"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:layout_below="@+id/Restaurent"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Restaurent"/>
                <LinearLayout
                    android:id="@+id/ll5"
                    android:gravity="center"
                    android:layout_below="@+id/txt5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/bresturent"
                        android:background="@drawable/btn_shape"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Book Now"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_below="@id/ll5"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>