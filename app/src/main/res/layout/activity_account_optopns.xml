<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountOptopns"
    android:background="#E6E2E2">
<ScrollView
android:layout_width="match_parent"
android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/paymentenece"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:clickable="true"
            android:foreground="@drawable/paymentenence">
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/monthlyreciept"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:clickable="true"
            android:foreground="@drawable/monthlyrecipt">
        </android.support.v7.widget.CardView>
    </LinearLayout>
   <!-- <LinearLayout
        android:layout_marginTop="10dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:id="@+id/viewstatementself"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:clickable="true"
            android:foreground="@drawable/viewsatatementself">
        </android.support.v7.widget.CardView>
    </LinearLayout>-->
    <LinearLayout
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:id="@+id/viewstatementsociety"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:clickable="true"
            android:foreground="@drawable/viewstatementsociety">
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:id="@+id/projectexpences"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:clickable="true"
            android:foreground="@drawable/projectexpences">
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
</ScrollView>
    </RelativeLayout>